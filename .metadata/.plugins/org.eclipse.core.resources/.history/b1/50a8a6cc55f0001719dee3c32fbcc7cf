package app1;

import java.awt.EventQueue;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

public class TestJFrame2 extends JFrame implements ActionListener{
	

	private JPanel contentPane;
	private JButton btnNewButton;
	private JLabel label;
	private JPanel panel;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					TestJFrame2 frame = new TestJFrame2();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public TestJFrame2() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		btnNewButton = new JButton("\u6309\u94AE");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
			}
		});
		btnNewButton.setBounds(164, 170, 93, 23);
		contentPane.add(btnNewButton);
		
		label = new JLabel("\u8BA1\u6570");
		label.setBounds(99, 97, 200, 50);
		contentPane.add(label);
		
		panel = new JPanel();
		panel.setBounds(164, 115, 56, 23);
		contentPane.add(panel);
		contentPane.add(panel);
		//为按钮添加事件
		btnNewButton.addActionListener(this);
	}
	@Override
	public void actionPerformed(ActionEvent e) {
		//构造一个线程，让下面这段逻辑代码在新的线程中执行
		//而执行actionPerformed方法的执行者，可以
		//重绘页面（JFrame以及上面的其他组件）
		
		new Counter(label).start();//启动新的线程
	}

}
